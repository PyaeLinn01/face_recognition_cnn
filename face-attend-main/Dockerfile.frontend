# Frontend Dockerfile
FROM node:18

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* bun.lockb* ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Environment variables
ENV VITE_API_URL=http://localhost:5001/api/v1

# Expose dev server port
EXPOSE 8080

# Run dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "8080"]
